<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dimen_6"
    android:paddingLeft="@dimen/default_dimen_margin"
    android:paddingTop="@dimen/dimen_6">

    <ImageView
        android:id="@+id/item_daily_info_content_image"
        style="@style/SmallImageStyle"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/item_daily_info_content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/default_dimen_margin"
        android:layout_toRightOf="@id/item_daily_info_content_image">

        <TextView
            android:id="@+id/item_daily_info_content_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="title"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_content" />

        <TextView
            android:id="@+id/item_daily_info_content_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_daily_info_content_title"
            android:layout_below="@id/item_daily_info_content_title"
            android:layout_marginTop="@dimen/default_dimen_text"
            android:gravity="center_vertical"
            android:text="author"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/text_content_summary" />

        <TextView
            android:id="@+id/item_daily_info_content_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/item_daily_info_content_author"
            android:layout_marginLeft="@dimen/default_dimen_margin"
            android:layout_toRightOf="@id/item_daily_info_content_author"
            android:gravity="center_vertical"
            android:text="time"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/text_content_summary" />

        <ImageView
            android:id="@+id/item_daily_info_content_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/item_daily_info_content_author"
            android:layout_marginRight="@dimen/default_dimen_margin"
            android:src="@mipmap/arrow_right" />

    </RelativeLayout>

    <View
        android:id="@+id/item_daily_info_content_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:layout_below="@id/item_daily_info_content_image"
        android:layout_marginTop="@dimen/dimen_6"
        android:background="@color/divider_list_color" />

</RelativeLayout>